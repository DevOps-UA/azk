#!/bin/bash

set -e

__FILE__="${0}"
export AZK_ROOT_PATH=`cd \`dirname $(readlink ${__FILE__} || echo ${__FILE__} )\`/..; pwd`
export DEFAULT_FILE_PATH=${DEFAULT_FILE_PATH:-$AZK_ROOT_PATH/data}

export PATH=/usr/bin:/bin:/usr/sbin
export PATH=$AZK_ROOT_PATH/bin:$PATH
export PATH=$AZK_ROOT_PATH/lib/libexec:$PATH

# Configure NVM and boot2docker
export NVM_DIR=$DEFAULT_FILE_PATH/nvm
export BOOT2DOCKER_SSH_KEY=$AZK_ROOT_PATH/lib/share/id_rsa_insecure
export BOOT2DOCKER_CFG_DIR=$DEFAULT_FILE_PATH/boot2docker
export VM_NAME=azk-agent
export VM_HOSTONLY_IP=192.168.50.4

# local
node_version=v0.11.11
libexec_deps=$AZK_ROOT_PATH/lib/libexec
git_raw=https://raw2.github.com
b2d_url=$git_raw/azukiapp/boot2docker/master/boot2docker
nvm_url=$git_raw/creationix/nvm/master/nvm.sh
data_url=http://bit.ly/1gHfPEj

log() {
  e="echo"
  if [ -n "$2" -a "$1" == "-n" ]; then
    shift
    e="echo -n"
  fi
  $e >&2 "[`date +"%Y-%m-%d %H:%M:%S"`] ${*}"
}

# Check if all required commands exist
cmd_exists() {
  while [ -n "$1" ]; do
    command -v $1 >/dev/null 2>&1 || \
      { log "command '$1' is required but not installed.  Aborting."; notOK=1; }
    shift
  done
  if [ -n "$notOK" ]; then
    exit 1
  fi
}
cmd_exists git nc curl grep head tr

# Roles
check_nvm() {
  [ -f $libexec_deps/nvm.sh ]
}

check_node() {
  . $libexec_deps/nvm.sh
  nvm use $node_version &>/dev/null
}

check_npm() {
  [ -d $AZK_ROOT_PATH/node_modules ]
}

check_data_disk() {
  [ -f $BOOT2DOCKER_CFG_DIR/azk-agent.vmdk.bz ]
}

# Check for depedencies
check_depedencies() {
  msg() {
    log "azk dependencies '$1' not installed. Run 'azk configure'"
    exit 1
  }

  check_nvm  || msg nvm
  check_node || msg node
  check_npm  || msg 'node dependencies'
  check_data_disk || msg 'blank data disk'
}

check_install() {
  log -n "$2: "
  if `$1` ; then
    echo "ok" >&2
  else
    echo "fail" >&2
    return 1
  fi
}

configure() {
  ok()   { echo "ok" >&2; }
  fail() { echo "fail" >&2; }

  check_install "check_nvm" "Check nvm" || {
    log "Install nvm..."
    curl $nvm_url -o $libexec_deps/nvm.sh
  }

  # Load nvm
  mkdir -p $NVM_DIR
  . $libexec_deps/nvm.sh

  check_install "check_node" "Check node" || {
    log "Install node..."
    nvm install $node_version
  }

  nvm use $node_version &>/dev/null
  check_install "check_npm" "Check azk node dependencies" || {
    log "Install node depedencies..."
    cd $AZK_ROOT_PATH
    npm install
  }

  check_install "check_data_disk" "Check blank data disk" || {
    log "Download disk"
    curl -L $data_url -o $BOOT2DOCKER_CFG_DIR/azk-agent.vmdk.bz
  }
}

azk_main() {
  case "$1" in
    configure)
      configure
      ;;
    nvm)
      check_depedencies
      shift; "${@}"
      ;;
    b2d)
      check_depedencies
      #shift; bash -x boot2docker "${@}"
      shift; boot2docker "${@}"
      ;;
    *)
      check_depedencies
      node --harmony $AZK_ROOT_PATH/bin/azk.js "${@}"
  esac
}

# run main function
azk_main "${@}"
